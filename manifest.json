{
    "manifest_version": 3,
    "name": "rithcon - Browser AI Agent",
    "version": "1.0.1",
    "description": "Browser-level AI agent capable of chat and autonomous browser control.",
    "permissions": [
        "sidePanel",
        "storage",
        "tabs",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "action": {
        "default_title": "Open rithcon Agent Panel",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}
